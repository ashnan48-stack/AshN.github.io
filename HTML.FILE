            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
            gap: 40px;
            margin-top: 50px;
        }

        .venture-card {
            background-color: #f5f7f6;
            padding: 40px;
            border-radius: 8px;
            border-top: 4px solid #2c5f2d;
            transition: all 0.3s ease;
        }

        .venture-card:hover {
            box-shadow: 0 12px 28px rgba(0, 0, 0, 0.12);
            transform: translateY(-8px);
        }

        .venture-card h3 {
            font-size: 24px;
            color: #1a3a1a;
            margin-bottom: 15px;
        }

        .venture-card .role {
            font-size: 12px;
            color: #2c5f2d;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-bottom: 15px;
        }

        .venture-card p {
            color: #2c3e50;
            margin-bottom: 12px;
            line-height: 1.7;
        }

        /* ============ EXPERTISE SECTION ============ */
        .expertise {
            background-color: #f5f7f6;
            padding: 100px 20px;
        }

        .expertise-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 30px;
            margin-top: 50px;
        }

        .expertise-box {
            background-color: white;
            padding: 35px;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.05);
            transition: all 0.3s ease;
        }

        .expertise-box:hover {
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
            transform: translateY(-5px);
        }

        .expertise-box h3 {
            font-size: 20px;
            color: #1a3a1a;
            margin-bottom: 15px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .expertise-box p {
            color: #2c3e50;
            line-height: 1.7;
            font-size: 14px;
        }

        /* ============ CONTACT SECTION ============ */
        .contact {
            background: linear-gradient(135deg, #2c5f2d 0%, #1a3a1a 100%);
            padding: 100px 20px;
            color: white;
        }

        .contact .section-title {
            color: white;
        }

        .contact .section-title::after {
            background-color: #8fbc8f;
        }

        .contact-content {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 50px;
            max-width: 1200px;
            margin: 0 auto;
            margin-top: 50px;
        }

        .contact-info h3 {
            font-size: 20px;
            margin-bottom: 25px;
        }

        .contact-item {
            margin-bottom: 30px;
        }

        .contact-item label {
            display: block;
            font-size: 12px;
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-bottom: 5px;
            opacity: 0.9;
        }

        .contact-item p {
            font-size: 16px;
            line-height: 1.6;
        }

        .contact-form {
            display: flex;
            flex-direction: column;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-group label {
            display: block;
            font-size: 12px;
            text-transform: uppercase;
            letter-spacing: 1px;
            margin-bottom: 8px;
        }

        .form-group input,
        .form-group textarea {
            width: 100%;
            padding: 12px;
            border: 1px solid rgba(255, 255, 255, 0.3);
            background-color: rgba(255, 255, 255, 0.1);
            color: white;
            border-radius: 4px;
            font-family: inherit;
            font-size: 14px;
            transition: all 0.3s ease;
        }

        .form-group input::placeholder,
        .form-group textarea::placeholder {
            color: rgba(255, 255, 255, 0.6);
        }

        .form-group input:focus,
        .form-group textarea:focus {
            outline: none;
            background-color: rgba(255, 255, 255, 0.15);
            border-color: rgba(255, 255, 255, 0.6);
        }

        .form-group textarea {
            resize: vertical;
            min-height: 120px;
        }

        .contact .btn-primary {
            background-color: white;
            color: #2c5f2d;
            margin-top: 10px;
        }

        .contact .btn-primary:hover {
            background-color: #f0f0f0;
        }

        /* ============ FOOTER ============ */
        footer {
            background-color: #1a3a1a;
            color: white;
            text-align: center;
            padding: 40px 20px;
            font-size: 14px;
        }

        .footer-links {
            margin-bottom: 20px;
        }

        .footer-links a {
            color: #8fbc8f;
            text-decoration: none;
            margin: 0 15px;
            transition: color 0.3s ease;
        }

        .footer-links a:hover {
            color: white;
        }

        /* ============ RESPONSIVE DESIGN ============ */
        @media (max-width: 768px) {
            nav ul {
                display: none;
                flex-direction: column;
                position: absolute;
                top: 70px;
                left: 0;
                right: 0;
                background-color: white;
                padding: 20px;
                gap: 10px;
                box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
            }

            nav ul.active {
                display: flex;
            }

            .nav-toggle {
                display: flex;
            }

            .hero h1 {
                font-size: 36px;
            }

            .hero .subtitle {
                font-size: 16px;
            }

            .cta-buttons {
                flex-direction: column;
                align-items: center;
            }

            .btn {
                width: 100%;
                max-width: 300px;
            }

            .about-content,
            .contact-content {
                grid-template-columns: 1fr;
            }

            .about-image {
                height: 300px;
            }

            .section-title {
                font-size: 32px;
            }

            .hero h1 {
                font-size: 42px;
            }

            .highlights {
                grid-template-columns: 1fr;
            }
        }

        @media (max-width: 480px) {
            .header-container {
                height: 60px;
            }

            .logo {
                font-size: 18px;
            }

            nav a {
                font-size: 12px;
            }

            .hero {
                padding: 60px 20px;
            }

            .hero h1 {
                font-size: 28px;
            }

            .hero .subtitle {
                font-size: 14px;
            }

            .section-title {
                font-size: 24px;
            }

            .highlight-number {
                font-size: 36px;
            }

            .timeline-item {
                padding: 25px;
            }

            .venture-card,
            .expertise-box {
                padding: 25px;
            }
        }

        /* ============ ACCESSIBILITY ============ */
        .skip-link {
            position: absolute;
            top: -40px;
            left: 0;
            background: #2c5f2d;
            color: white;
            padding: 8px;
            text-decoration: none;
            z-index: 100;
        }

        .skip-link:focus {
            top: 0;
        }

        @media (prefers-reduced-motion: reduce) {
            * {
                animation-duration: 0.01ms !important;
                animation-iteration-count: 1 !important;
                transition-duration: 0.01ms !important;
            }
        }
    </style>
</head>
